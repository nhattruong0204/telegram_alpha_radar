# =============================================================================
# Telegram Alpha Radar â€” Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.

# --- Telegram MTProto credentials ---
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890
TELEGRAM_SESSION_NAME=alpha_radar

# --- PostgreSQL ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_NAME=alpha_radar
DB_MIN_POOL=2
DB_MAX_POOL=10

# --- Trending Detection ---
WINDOW_MINUTES=5
MIN_MENTIONS=3
MIN_UNIQUE_CHATS=2
ALERT_COOLDOWN_MINUTES=15
TRENDING_CHECK_INTERVAL=30

# --- Anti-Spam Filters ---
MIN_MESSAGE_LENGTH=0
IGNORE_FORWARDED=false

# --- Dexscreener Liquidity Validation (optional) ---
DEXSCREENER_ENABLED=false
MIN_LIQUIDITY_USD=20000

# --- Prometheus Metrics (optional) ---
METRICS_ENABLED=false
METRICS_PORT=9090

# --- Logging ---
LOG_LEVEL=INFO
DEBUG=false
