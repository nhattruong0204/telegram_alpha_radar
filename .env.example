# --- Telegram MTProto credentials ---
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890
TELEGRAM_SESSION_NAME=alpha_radar

# --- PostgreSQL ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=radar
DB_PASSWORD=your_secure_password_here
DB_NAME=alpha_radar
DB_POOL_MIN=2
DB_POOL_MAX=10

# --- Trending Detection ---
TRENDING_WINDOW_MINUTES=5
TRENDING_MIN_MENTIONS=3
TRENDING_MIN_UNIQUE_CHATS=2
TRENDING_COOLDOWN_MINUTES=15
TRENDING_CHECK_INTERVAL=30

# --- Message Filters ---
FILTER_MIN_MSG_LENGTH=5
FILTER_IGNORE_FORWARDED=false

# --- Dexscreener (optional) ---
DEXSCREENER_ENABLED=false
DEXSCREENER_MIN_LIQUIDITY=1000
DEXSCREENER_API_URL=https://api.dexscreener.com/latest/dex/tokens

# --- Prometheus Metrics (optional) ---
METRICS_ENABLED=false
METRICS_PORT=9090

# --- Health Check ---
HEALTH_ENABLED=true
HEALTH_PORT=8080

# --- Logging ---
LOG_LEVEL=INFO
LOG_JSON=false
